<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_settings" />

    <Button
        android:id="@+id/music"


        android:layout_width="87.47dp"
        android:layout_height="87.47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="81.31dp"
        android:layout_marginTop="326dp"
        android:background="@drawable/music" />

    <Button
        android:id="@+id/sound"
        android:layout_width="87.47dp"
        android:layout_height="87.47dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="248.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="326dp"
        android:background="@drawable/sounds" />

    <Button
        android:id="@+id/turn_on"
        android:layout_width="108.57dp"
        android:layout_height="31.29dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="69dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="425.78dp"
        android:background="@drawable/turn_on"
        android:text="Включить" />

    <Button
        android:id="@+id/turn_on2"
        android:layout_width="108.57dp"
        android:layout_height="31.29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="236.43dp"
        android:layout_marginTop="425.78dp"
        android:background="@drawable/turn_on"
        android:text="Включить" />

    <Button
        android:id="@+id/back_settings"
        android:layout_width="206dp"
        android:layout_height="59.37dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="104dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="495dp"
        android:background="@drawable/back" />

</RelativeLayout>